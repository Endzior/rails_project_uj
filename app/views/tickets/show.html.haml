.page-header
  %h1 
    = @ticket.name
    %small 
      as 
      = current_user.full_name
      from project
      = @project.name
.panel
  = simple_format(@ticket.description, {}, wrapper_tag: 'div')
.page-header
  %h2
    Attachments
    %small
      one simple click away from secret stuff
.panel
  - @ticket.attachments.each do |a|
    =link_to a.attachedfile_file_name, project_ticket_attachment_path(@project, @ticket, a), method: :get, class: "btn btn-default", :target => '_blank'
.btn-group
  =link_to 'Delete this ticket', project_ticket_path(@project, @ticket), method: :delete, class:  "btn btn-default"
  =link_to 'Edit this ticket', edit_project_ticket_path(@project, @ticket), method: :get, class: "btn btn-default"
  =link_to 'Back to ' + @project.name, project_path(@project), method: :get, class:  "btn btn-default"