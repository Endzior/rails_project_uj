.page-header
  %h1 
    = @ticket.name
    %small 
      as 
      = current_user.full_name
      from project
      = @project.name
.panel
  = @ticket.description
%br/
.btn-group
  =link_to 'Delete this ticket', project_ticket_path(@project, @ticket), method: :delete, class:  "btn btn-default"
  =link_to 'Back to ' + @project.name, project_path(@project), method: :get, class:  "btn btn-default"